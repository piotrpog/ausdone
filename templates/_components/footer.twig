                {% set form = footer.formieForm.one() %}
                {% if form %}
                    {% set renderOptions = {
                        themeConfig: {
                            fieldInput: {
                                resetClass: true,
                                attributes: {
                                    class: 'w-full rounded-lg sm:h-14 h-10 px-4 py-2 2xl:text-xl sm:text-base text-sm ring-primary focus:ring-primary focus:outline-1 outline-primary',
                                },
                            },
                            submitButton: {
                                resetClass: false,
                                attributes: {
                                    class: '',
                                },
                            }
                        },
                    } %}
                    <div class="footer-form">
                    {{ craft.formie.renderForm(form, renderOptions) }}
                    </div>
                {% endif %}

                {% css %}
                .footer-form .fui-page{
                    display: flex;
                    gap: 1rem;
                }
                .footer-form .fui-field, .footer-form .fui-btn-wrapper{
                    padding-top: 0px;
                    margin-top: 0px;
                    padding-bottom: 0px;
                    margin-bottom: 0px;
                }
                .footer-form .fui-submit{
                    background-color: transparent;
                    border-color: white;
                    font-size: 1rem;
                }
                {% endcss %}

                {% if footer.subscribePrivacyText %}
                <p class="2xl:text-xl sm:text-base text-sm text-white my-6">
                    {{ footer.subscribePrivacyText|nl2br }}
                </p>
                {% endif %}
            </div>
        </div>
    </div>
