{#    }#}

    {# content outside container #}
    {% block blockOutsideContainer %}{% endblock %}

    {# content in container #}
    {% if block('blockContent') %}
        {% tag 'div' with {
            class: [
                (hasContainer ?? true) ? 'container',
                containerClass ?? null,
            ],
        } %}
            {% block blockContent %}{% endblock %}
        {% endtag %}
    {% endif %}

{% endtag %}

{% css %}
.content-block{
    position: relative;
    padding-top: 2rem;
    padding-bottom: 2rem;
}
{% endcss %}